{% extends '@Front/base.html.twig' %}

{% block body %}
<div class="container">
    {% if posts|length %}
        {% for post in posts %}
            <div class="blog-post">
                <h1><a href="{{ path('front_post_show',{id:post.id}) }}">{{ post.title }}</a></h1>
                {% if post.image %}
                    <a href="{{ path('front_post_show',{id:post.id}) }}"><img width="300px" src="{{ asset('uploads/posts/images/') }}{{ post.image }}"></a>
                {% endif %}

            </div>
        {% endfor %}
    {% else %}
        <p>There are no published posts</p>
    {% endif %}
</div>
{% endblock %}

{% block aside %}
    {% include '@Front/layout.aside.html.twig' %}
{% endblock %}



